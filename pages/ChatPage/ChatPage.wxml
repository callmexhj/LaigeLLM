<!--pages/ChatPage/ChatPage.wxml-->
<view class="chat-page">
  <view wx:for="{{chatInfo.messages}}" wx:key="index">
    <message-item content="{{item.content}}" role="{{item.role}}"/>
  </view>
  <chat-input bind:receiveMessage="handleReceiveMessage" bind:sendMessage="handleSendMessage"/>
  <t-toast id="t-toast" />
</view>